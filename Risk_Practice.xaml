<Canvas
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    mc:Ignorable="d"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="800" d:DesignWidth="1200" Height="auto" Width="auto"  
    Background="#FFEFF3FC" Name="RiskPractice">
  <Label x:Name="lbl_FormHeader" Content="Practice-Level Matter Risk Assessment and File Reviews - Management Area" Height="32" Canvas.Left="10" Canvas.Top="10" Width="590" FontWeight="Bold" Foreground="Navy" FontSize="16"/>

  <TabControl x:Name="TC_Main" Canvas.Left="10" Canvas.Top="47" Height="743" Width="1180" Background="#FFEFF3FC" BorderBrush="#FF7E98EE">
    <TabItem Header="Manage Locks" x:Name="ti_ManageLocks" Height="26" Width="200" >
      <Canvas>
        <TextBlock Text="Use this page to unlock matters which were automatically locked, to allow the Fee Earner to complete one now (this resets the timer to allow another 2 weeks)." Foreground="Gray" TextWrapping="Wrap" Height="18" Width="909" Canvas.Left="10" Canvas.Top="10" />
        <TextBlock Text="NB: Matters are automatically locked after 14 days if there isn't a completed 'Matter Risk Assessment' on file. This prevents any activity on the matter from taking place (eg: Fee Earner cannot Time Record to the matter; secretaries unable to create documents etc)." Foreground="Gray" TextWrapping="Wrap" Height="38" Width="856" Canvas.Left="10" Canvas.Top="28" HorizontalAlignment="Left" VerticalAlignment="Center" />
        <TextBlock x:Name="tb_NoLockedMatters" Text="There are no Locked matters matching the 'Filter Criteria'" Foreground="Red" TextWrapping="Wrap" Canvas.Left="285" Canvas.Top="157" FontSize="22" FontWeight="Bold" />
        <Label Content="Reason for Unlocking" Foreground="Navy" Canvas.Left="907" Canvas.Top="10" HorizontalAlignment="Left" VerticalAlignment="Center" />
        <ComboBox x:Name="cbo_Reason" Width="155" Canvas.Left="891" Canvas.Top="41" />

        <GroupBox Header="With selected matters..." Foreground="Navy" BorderBrush="#FF7E98EE" Height="86" Width="246" Canvas.Left="918" Canvas.Top="66" Visibility="Hidden">
          <Canvas>
            <!--Why does this exist? This datagrid is only going to show LOCKED matters, so unless we alter the filter criteria
                            to allow visibility of 'All Matters' (eg: not just those locked ones), then this is irrelevant!
                            Additionally, I'm not sure it would even make sense to have a 'lock' button here.
                            NB: I would want this (ability to lock) on my own 'locks' screen (to automate locking process and giving people keys etc) -->
            <Button x:Name="btn_LockMatters" Canvas.Left="10" Canvas.Top="5" Height="60" Width="114" >
              <StackPanel Orientation="Vertical">
                <Image MaxHeight="30" Source="\\tw-p4wapp01\Partner\Managing Partner\Other Resources\Lock.png"/>
                <TextBlock Text="Lock Matter(s)" />
              </StackPanel>
            </Button>
          </Canvas>
        </GroupBox>

        <GroupBox Header="Filter Criteria..." Foreground="Navy" BorderBrush="#FF7E98EE" Height="86" Width="1049" Canvas.Left="10" Canvas.Top="66">
          <Canvas>
            <Label Content="Fee Earner" Foreground="Navy" Canvas.Left="10" HorizontalContentAlignment="Right" Canvas.Top="34" />
            <ComboBox x:Name="cboFeeEarner" Canvas.Left="80" Width="195" Height="26" Canvas.Top="34" >
              <ComboBox.ItemTemplate>
                <DataTemplate>
                  <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding Code, Mode=TwoWay}" Width="38" />
                    <TextBlock Text="{Binding Name, Mode=TwoWay}" Width="180" />
                  </StackPanel>
                </DataTemplate>
              </ComboBox.ItemTemplate>
            </ComboBox>
            <Label Content="Department" Foreground="Navy" Canvas.Left="2" HorizontalContentAlignment="Right" Canvas.Top="3" />
            <ComboBox x:Name="cboDept" Canvas.Left="80" Width="195" Height="26" Canvas.Top="3">
              <!--<ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Code, Mode=TwoWay}" Width="180" />
                                        <TextBlock Text="{Binding Name, Mode=TwoWay}" Width="0" />
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>-->

            </ComboBox>
            <Label Content="Text Search" Foreground="Navy" Canvas.Left="280" Width="75" HorizontalContentAlignment="Right"  />
            <Label Foreground="Gray" Content="(searches: Client Name, Matter Description)" Canvas.Left="563" Width="235" HorizontalContentAlignment="Left" FontStyle="Italic"  />
            <TextBox x:Name="txtSearch" Width="199" Canvas.Left="360" Height="26" VerticalContentAlignment="Center" />

            <Label Content="Entity Ref / Matter No" Foreground="Navy" Canvas.Top="31" Width="134" HorizontalContentAlignment="Right"  Canvas.Left="299"  />
            <TextBox x:Name="txtEntityRef" Width="65" Canvas.Left="438" Canvas.Top="31" Height="26" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" />
            <Label Content="/" Foreground="Navy" Canvas.Top="31" Width="15" HorizontalContentAlignment="Left"  Canvas.Left="504"  />
            <TextBox x:Name="txtMatterNo" Width="40" Canvas.Left="519" Canvas.Top="31" Height="26" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" />

            <Button x:Name="btn_RefreshLockedMatters" Content="Search" Background="#FF91E888" Canvas.Left="718" Height="26" Width="70" Canvas.Top="31" />
            <Button x:Name="btn_ClearLockedMattersFilters" Content="Clear Filters - View All" Background="#FFF0B8B8" ToolTip="Click here to clear all filter criteria and view all locked matters" Canvas.Left="572" Height="26" Width="128" Canvas.Top="31" />

            <StackPanel Orientation="Horizontal" Canvas.Left="816" Canvas.Top="16" Visibility="Visible">
              <Label Content="Group By" Foreground="Navy" />
              <ComboBox x:Name="cbo_GroupBy" Width="155" >
                <ComboBox.ItemTemplate>
                  <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                      <TextBlock Text="{Binding FriendlyName, Mode=TwoWay}" Width="150" />
                      <TextBlock Text="{Binding CodeName, Mode=TwoWay}" Width="0" Visibility="Hidden"/>
                    </StackPanel>
                  </DataTemplate>
                </ComboBox.ItemTemplate>
              </ComboBox>

            </StackPanel>
          </Canvas>
        </GroupBox>


        <DataGrid x:Name="dg_LockedMatters" Height="553" Width="1174" Canvas.Top="157" AlternatingRowBackground="#FFAEDEB9" 
                            AutoGenerateColumns="False" IsTextSearchEnabled="True" SelectionMode="Single" FrozenColumnCount="1"
                            CanUserResizeRows="False" HeadersVisibility="Column" RowDetailsVisibilityMode="Visible">
          <DataGrid.Resources>
            <Style x:Key="GroupHeaderStyle" TargetType="{x:Type GroupItem}" >
              <Setter Property="Margin" Value="0,2,0,4"/>
              <!--<Setter Property="Padding" Value="0,2,0,0" />-->
              <Setter Property="Template">
                <Setter.Value>
                  <ControlTemplate TargetType="{x:Type GroupItem}" >
                    <Expander x:Name="exp" IsExpanded="True"
                              Background="LightGray" BorderBrush="LightGray" BorderThickness="1,1,1,4"
                              Foreground="Black" Padding="0,2,0,0">
                      <Expander.Header>
                        <DockPanel>
                          <TextBlock FontWeight="Bold" Text="{Binding Path=Name}" Margin="5,0,0,0" />
                          <TextBlock Text=" (" FontWeight="Bold" />
                          <TextBlock FontWeight="Bold" Text="{Binding Path=ItemCount}"/>
                          <TextBlock Text=")" FontWeight="Bold" />
                        </DockPanel>
                      </Expander.Header>
                      <ItemsPresenter />
                    </Expander>

                  </ControlTemplate>
                </Setter.Value>
              </Setter>

            </Style>
            <Style x:Key="RightAligned" TargetType="DataGridCell">
              <Setter Property="HorizontalAlignment" Value="Right" />
            </Style>
            <Style x:Key="Center" TargetType="DataGridCell">
              <Setter Property="TextBlock.TextAlignment" Value="Center" />
            </Style>
            <Style x:Key="DubHeightColumn" TargetType="DataGridColumnHeader">
              <Setter Property="ContentTemplate">
                <Setter.Value>
                  <DataTemplate>
                    <TextBlock TextWrapping="Wrap" Text="{Binding}" TextAlignment="Center" Width="{Binding}"/>
                  </DataTemplate>
                </Setter.Value>
              </Setter>
              <Setter Property="HorizontalContentAlignment" Value="Center" />
              <Setter Property="VerticalContentAlignment" Value="Center" />
              <Setter Property="BorderThickness" Value="1" />
              <Setter Property="Width" Value="Auto" />
              <Setter Property="Height" Value="42"/>
            </Style>
          </DataGrid.Resources>

          <DataGrid.GroupStyle>
            <GroupStyle ContainerStyle="{StaticResource GroupHeaderStyle}" >
              <GroupStyle.Panel>
                <ItemsPanelTemplate >
                  <DataGridRowsPresenter />
                </ItemsPanelTemplate>
              </GroupStyle.Panel>
            </GroupStyle>
          </DataGrid.GroupStyle>

          <DataGrid.Columns>
            <DataGridTextColumn Header="Our Ref" Binding="{Binding EntityRefMN}" IsReadOnly="True" />
            <DataGridTextColumn Header="Client Name" Binding="{Binding ClName}" IsReadOnly="True" Width="150"/>
            <DataGridTextColumn Header="Matter Description" Binding="{Binding MatDesc}" IsReadOnly="True" Width="150"/>
            <DataGridTextColumn Header="Fee Earner" Binding="{Binding FeeEarner}" IsReadOnly="True" />
            <DataGridTextColumn Header="Department" Binding="{Binding Department}" IsReadOnly="True" />
            <DataGridTextColumn Header="Matter Opened" Binding="{Binding MatterOpened, StringFormat='dd/MM/yyyy'}" CellStyle="{StaticResource RightAligned}" IsReadOnly="True" />
            <DataGridTextColumn Header="Days Since Matter Open" 
                                            CellStyle="{StaticResource Center}"   
                                            Binding="{Binding DaysSinceMatterOpen}" IsReadOnly="True" 
                                            HeaderStyle="{StaticResource DubHeightColumn}" Width="80"/>
            <DataGridTextColumn Header="EntityRef" Binding="{Binding EntityRef}" IsReadOnly="True" Visibility="Hidden"/>
            <DataGridTextColumn Header="MatterNo" Binding="{Binding MatterNo}" IsReadOnly="True" Visibility="Hidden"/>

            <!--<DataGridTextColumn Header="Expiry Date" Binding="{Binding MRA_ExpiryDate}" IsReadOnly="True" />-->
            <DataGridTextColumn Header="MRA ID" Binding="{Binding MRA_ID}" 
                                            CellStyle="{StaticResource Center}" IsReadOnly="True" />
            <DataGridTextColumn Header="MRA Name" Binding="{Binding MRA_Name}" IsReadOnly="True" />
            <DataGridTextColumn Header="MRA Current Expiry Date" 
                                            Binding="{Binding MRA_ExpiryCurrent, StringFormat='dd/MM/yyyy'}" 
                                            HeaderStyle="{StaticResource DubHeightColumn}" Width="90" IsReadOnly="True" />
            <DataGridTextColumn Header="Default Expiry Days" 
                                            Binding="{Binding MRA_TTExpiryDays}" IsReadOnly="True" 
                                            HeaderStyle="{StaticResource DubHeightColumn}" Width="70"/>
          </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="btn_UnlockMatters" Canvas.Top="3" Height="72" Width="100" Canvas.Left="1064" HorizontalAlignment="Center" VerticalAlignment="Top" >
          <StackPanel Orientation="Vertical">
            <Image MaxHeight="30" Source="\\tw-p4wapp01\Partner\Managing Partner\Other Resources\Unlock.png"/>
            <TextBlock Text="Unlock selected matter(s)" TextWrapping="Wrap" TextAlignment="Center"/>
          </StackPanel>
        </Button>

      </Canvas>
    </TabItem>

    <TabItem Header="Configure Matter Risk Assessments" x:Name="ti_Defaults" Width="200">
      <Canvas>
        <TabControl x:Name="tc_MRA" Canvas.Left="10" Canvas.Top="10" Height="690" Width="1154" Background="#FFEFF3FC" BorderBrush="#FF7E98EE" TabStripPlacement="Top" >
          <TabItem Header="Risk Assessments Overview" x:Name="ti_MRA_Overview" >
            <Canvas>
              <TextBlock Text="Use this page to configure a Matter Risk Assessment template and set which Case Types (or Departments) should use which" Foreground="Gray" Canvas.Left="10" Canvas.Top="10" Width="812" />
              <TabControl x:Name="tc_MRA_Main" Background="#FFEFF3FC" BorderBrush="#FF7E98EE" Height="621" Width="1128" Canvas.Left="10" Canvas.Top="31" >
                <TabItem Header="Main" Width="130">
                  <Canvas>
                    <TextBlock Foreground="Gray" Text="Use this page to manage your Matter Risk Assessment templates (and setting the 'Score Thresholds' for the 'Low', 'Medium' and 'High' Risk Ratings" Canvas.Left="10" Canvas.Top="10" />
                    <StackPanel Orientation="Horizontal" Canvas.Left="359" Canvas.Top="10" Width="69"  Visibility="Hidden">
                      <Label x:Name="lbl_MRA_Template_ID" Content="-ID-" Foreground="Gray" HorizontalContentAlignment="Right"/>
                      <Label x:Name="lbl_MRA_Template_Name" Content="-Name-" Foreground="Gray" HorizontalContentAlignment="Right"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Canvas.Left="10" Canvas.Top="38" HorizontalAlignment="Center" VerticalAlignment="Top" >
                      <Button x:Name="btn_AddNew_MRATemplate" Margin="0,0,0,0">
                        <StackPanel Orientation="Horizontal">
                          <Image MaxHeight="20" Source="\\tw-p4wapp01\Partner\Managing Partner\Other Resources\plus.png"/>
                          <TextBlock Margin="3,4,0,4" Text="Add New..."  TextWrapping="Wrap" Width="50" TextAlignment="Center"/>
                        </StackPanel>
                      </Button>

                      <Button x:Name="btn_CopySelected_MRATemplate" IsEnabled="False"  Margin="12,0,0,0">
                        <StackPanel Orientation="Horizontal">
                          <Image MaxHeight="20" Source="\\tw-p4wapp01\Partner\Managing Partner\Other Resources\Copy(small).png"/>
                          <TextBlock Margin="3,4,0,4" Text="Duplicate Selected" TextWrapping="Wrap" Width="60" TextAlignment="Center"/>
                        </StackPanel>
                      </Button>
                      
                      <Button x:Name="btn_Preview_MRATemplate" IsEnabled="False" Margin="12,0,0,0">
                        <StackPanel Orientation="Horizontal">
                          <Image MaxHeight="20" Source="\\tw-p4wapp01\Partner\Managing Partner\Other Resources\Test2.png"/>
                          <TextBlock Margin="3,4,0,4" Text="Preview Selected"  TextWrapping="Wrap" Width="50" TextAlignment="Center"/>
                        </StackPanel>
                      </Button>
                      
                      <Button x:Name="btn_Edit_MRATemplate" IsEnabled="False" Margin="12,0,0,0">
                        <StackPanel Orientation="Horizontal">
                          <Image MaxHeight="20" Source="\\tw-p4wapp01\Partner\Managing Partner\Other Resources\Edit1.png"/>
                          <TextBlock Margin="3,4,0,4" Text="Edit Selected"  TextWrapping="Wrap" Width="50" TextAlignment="Center"/>
                        </StackPanel>
                      </Button>
                      
                      <Button x:Name="btn_DeleteSelected_MRATemplate" Background="#FFFFA7A7" IsEnabled="False" Margin="12,0,0,0">
                        <StackPanel Orientation="Horizontal">
                          <Image MaxHeight="20" Source="\\tw-p4wapp01\Partner\Managing Partner\Other Resources\trash.png"/>
                          <TextBlock Margin="3,4,0,4" Text="Delete Selected" TextWrapping="Wrap" Width="50" TextAlignment="Center"/>
                        </StackPanel>
                      </Button>

                      <CheckBox x:Name="chk_ShowHiddenNMRAtemplates" Margin="12,0,0,0" VerticalAlignment="Center" VerticalContentAlignment="Center" FlowDirection="RightToLeft" >
                        <CheckBox.Resources>
                          <Style TargetType="{x:Type Path}">
                            <Setter Property="FlowDirection" Value="LeftToRight" />
                          </Style>
                        </CheckBox.Resources>

                        <StackPanel Orientation="Vertical">
                          <StackPanel Orientation="Horizontal">
                            <!--<TextBlock Text="Show 'Hidden' NMRA templates" TextWrapping="Wrap" Width="100"/>-->
                            <TextBlock Text=" 'Hidden' " TextWrapping="Wrap" FontStyle="Italic" Foreground="Red"/>
                            <TextBlock Text="Show" TextWrapping="Wrap" />
                          </StackPanel>
                          <TextBlock Text="NMRA templates" TextWrapping="Wrap" />
                        </StackPanel>
                        
                        
                      </CheckBox>
                    </StackPanel>

                    <DataGrid x:Name="dg_MRA_Templates" Width="577" Height="496"
                              AlternatingRowBackground="#FFAEDEB9" SelectionMode="Single" AutoGenerateColumns="False" 
                              IsTextSearchEnabled="True" Canvas.Top="87" Canvas.Left="10"
                              CanUserResizeRows="False" HeadersVisibility="All" 
                              RowDetailsVisibilityMode="Visible" 
                              HorizontalAlignment="Center" VerticalAlignment="Top">

                      <DataGrid.RowHeaderStyle>
                        <Style TargetType="DataGridRowHeader">
                          <Setter Property="Width" Value="16"/>
                          <Setter Property="Background" Value="Transparent"/>
                          <Setter Property="BorderBrush" Value="Black"/>
                          <Setter Property="BorderThickness" Value="0.5"/>

                          <Setter Property="ContentTemplate">
                            <Setter.Value>
                              <DataTemplate>
                                <Image MaxHeight="14" Source="\\tw-p4wapp01\Partner\Managing Partner\Other Resources\Edit1.png" Visibility="Collapsed"/>
                              </DataTemplate>
                            </Setter.Value>
                          </Setter>

                          <Style.Triggers>
                            <DataTrigger Binding="{Binding MRA_InEditMode}" Value="Y">
                              <Setter Property="ContentTemplate">
                                <Setter.Value>
                                  <DataTemplate>
                                    <Image MaxHeight="14" Source="\\tw-p4wapp01\Partner\Managing Partner\Other Resources\Edit1.png" Visibility="Visible"
                                           ToolTip="This NMRA template has an 'editing' version that is not yet 'Published' - click 'Edit Selected' to view/Publish"/>
                                  </DataTemplate>
                                </Setter.Value>
                              </Setter>
                            </DataTrigger>
                          </Style.Triggers>
                        </Style>
                      </DataGrid.RowHeaderStyle>

                      <DataGrid.Resources>
                        
                        <Style x:Key="RightAligned" TargetType="{x:Type DataGridCell}">
                          <Setter Property="HorizontalAlignment" Value="Right"/>
                        </Style>
                        <Style x:Key="Center" TargetType="{x:Type DataGridCell}">
                          <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                        </Style>

                        <Style TargetType="DataGridRow">
                          <Style.Triggers>
                            <DataTrigger Binding="{Binding MRA_InEditMode}" Value="Y" >
                              <!--<Setter Property="Background" Value="LightYellow" />-->
                              <Setter Property="FontWeight" Value="Bold" />
                            </DataTrigger>

                            <!-- I previously had this in 'DataGrid.CellStyle' for some reason - moving to here to 
                                 see if resolves issue with it previously only working on first 2 columns! 
                                  Yes, this is the better solution, so deleting the 'DataGrid.CellStyle' as now redundant -->
                            <DataTrigger Binding="{Binding MRAHidden}" Value="Y">
                              <Setter Property="Foreground" Value="Red" />
                              <Setter Property="FontStyle" Value="Italic" />
                            </DataTrigger>
                          </Style.Triggers>
                        </Style>
                        
                        
                        <Style x:Key="EditableColumn" TargetType="DataGridColumnHeader">
                          <Setter Property="ContentTemplate">
                            <Setter.Value>
                              <DataTemplate>
                                <TextBlock TextWrapping="Wrap" Text="{Binding}" TextAlignment="Center" Width="{Binding}"/>
                              </DataTemplate>
                            </Setter.Value>
                          </Setter>
                          <Setter Property="Background" Value="Green"/>
                          <Setter Property="Foreground" Value="White" />
                          <Setter Property="HorizontalContentAlignment" Value="Center" />
                          <Setter Property="VerticalContentAlignment" Value="Center" />
                          <Setter Property="BorderBrush" Value="Wheat" />
                          <Setter Property="BorderThickness" Value="1" />
                          <Setter Property="Width" Value="Auto" />
                          <Setter Property="Height" Value="42"/>
                        </Style>
                        
                        <Style x:Key="DubHeightColumn" TargetType="DataGridColumnHeader">
                          <Setter Property="ContentTemplate">
                            <Setter.Value>
                              <DataTemplate>
                                <TextBlock TextWrapping="Wrap" Text="{Binding}" TextAlignment="Center" Width="{Binding}"/>
                              </DataTemplate>
                            </Setter.Value>
                          </Setter>
                          <Setter Property="HorizontalContentAlignment" Value="Center" />
                          <Setter Property="VerticalContentAlignment" Value="Center" />
                          <Setter Property="BorderThickness" Value="1" />
                          <Setter Property="Width" Value="Auto" />
                          <Setter Property="Height" Value="42"/>
                        </Style>
                        
                        <Style x:Key="TotalColumn" TargetType="{x:Type DataGridColumnHeader}">
                          <Setter Property="HorizontalContentAlignment" Value="Right"/>
                          <Setter Property="BorderBrush" Value="Black"/>
                          <Setter Property="BorderThickness" Value="1"/>
                          <Setter Property="Width" Value="Auto"/>
                          <Setter Property="FontWeight" Value="Bold"/>
                        </Style>
                      </DataGrid.Resources>

                      

                      <DataGrid.Columns>
                        <DataGridTextColumn Header="Type ID" IsReadOnly="True" Width="40" 
                                            HeaderStyle="{StaticResource DubHeightColumn}"
                                            Binding="{Binding mraT_Code}"/>
                        <DataGridTextColumn Header="Friendly Name" IsReadOnly="True" Width="330" 
                                            Binding="{Binding mraT_Desc, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn Header="Expires in ?? days" IsReadOnly="True" Width="60" 
                                            Binding="{Binding mraT_VPeriod, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            CellStyle="{StaticResource Center}"/>
                        <DataGridTextColumn Header="Times Used" IsReadOnly="True" Width="50" 
                                            Binding="{Binding CountUsed}"
                                            HeaderStyle="{StaticResource DubHeightColumn}"
                                            CellStyle="{StaticResource Center}" />
                        <DataGridTextColumn Header="Question Count" IsReadOnly="True" Width="60" 
                                            Binding="{Binding QCount}"
                                            HeaderStyle="{StaticResource DubHeightColumn}" 
                                            CellStyle="{StaticResource Center}" />
                        <!--<DataGridTextColumn Header="ID" IsReadOnly="True" Width="100" Binding="{Binding ID}"/>-->

                        <DataGridTextColumn Header="InternalNote" IsReadOnly="True" Width="60" 
                                            Binding="{Binding MRAInternalNote}"
                                            Visibility="Collapsed" />
                        <DataGridTextColumn Header="UsersNote" IsReadOnly="True" Width="60" 
                                            Binding="{Binding MRAUsersNote}"
                                            Visibility="Collapsed"/>
                        <DataGridTextColumn Header="Hidden" IsReadOnly="True" Width="60" 
                                            Binding="{Binding MRAHidden}"
                                            Visibility="Collapsed" />
                        <DataGridTextColumn Header="EffectiveFrom" IsReadOnly="True" Width="60" 
                                            Binding="{Binding MRAFrom}"
                                            Visibility="Collapsed" />
                        <DataGridTextColumn Header="EffectiveTo" IsReadOnly="True" Width="60" 
                                            Binding="{Binding MRATo}"
                                            Visibility="Collapsed" />
                        <DataGridTextColumn Header="EditingTypeID" IsReadOnly="True" Width="60" 
                                            Binding="{Binding MRAEditingTypeID}"
                                            Visibility="Collapsed" />
                        <DataGridTextColumn Header="InEditMode" IsReadOnly="True" Width="60" 
                                            Binding="{Binding MRA_InEditMode}"
                                            Visibility="Collapsed" />
                        <DataGridTextColumn Header="ID" IsReadOnly="True" Width="60" 
                                            Binding="{Binding MRA_ID}"
                                            Visibility="Collapsed" />
                      </DataGrid.Columns>
                    </DataGrid>

                    <GroupBox Header="Meta-Data for the selected NMRA" Foreground="Gray" BorderBrush="Gray" Canvas.Left="592" Canvas.Top="87" 
                              HorizontalAlignment="Center" VerticalAlignment="Top"  Width="520"  >

                      <StackPanel Orientation="Vertical">
                        <TextBlock x:Name="tb_ST_NoMRA_Selected" Visibility="Collapsed" TextAlignment="Center" 
                                   Text="A 'Matter Risk Assessment' is not currently selected!  (select from list)" 
                                   Foreground="Red" FontWeight="Bold" TextWrapping="Wrap"  />

                        <StackPanel Orientation="Vertical" x:Name="stk_ST_SelectedMRA">

                          <StackPanel  Orientation="Horizontal" Canvas.Left="10" Canvas.Top="10">
                            <Label Foreground="Gray" Content="Selected Template"  />
                            <TextBox x:Name="tb_Sel_MRA_Name" Text="[MRA NAME]" VerticalAlignment="Center" Width="400" Height="23" VerticalContentAlignment="Center"/>
                          </StackPanel>

                          <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Label Content="ID" Foreground="Gray"/>
                            <Label x:Name="lbl_Sel_MRA_ID" Content="[ID]" Foreground="Gray" />
                            <Label Content="Editing TypeID/Code:" Foreground="Gray" Margin="20,0,0,0"/>
                            <Label x:Name="lbl_Sel_MRA_EditingTypeID" Content="[ID]" Foreground="Gray" />
                            <!--<Label x:Name="lbl_Sel_MRA_Name" Content="[MRA NAME]" Foreground="Gray" />-->
                          </StackPanel>

                          <StackPanel Orientation="Horizontal">
                            <Label Content="Expires in ?? days" Foreground="Gray"/>
                            <TextBox x:Name="tb_ExpiresInXdays" VerticalAlignment="Center" Width="28" TextAlignment="Center" Height="23" VerticalContentAlignment="Center" />
                            <Label Content="(# of days that a High-Risk NMRA will last before a new one is needed)" Foreground="Gray" FontStyle="Italic" />
                          </StackPanel>

                          <StackPanel Orientation="Horizontal" Margin="6,4,0,0">
                            <TextBlock Text="Internal Note (Risk eyes only)" TextWrapping="Wrap" Width="90"/>
                            <TextBox x:Name="tb_InternalNote" Width="410" Height="80" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" MaxLength="5000" VerticalAlignment="Top"/>
                          </StackPanel>

                          <StackPanel Orientation="Horizontal" Margin="6,4,0,0">
                            <TextBlock Text="Note for Users" TextWrapping="Wrap" Width="90"/>
                            <TextBox x:Name="tb_UsersNote" Width="410" Height="80" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" MaxLength="5000" VerticalAlignment="Top" />
                          </StackPanel>

                          <StackPanel Orientation="Horizontal" Margin="0,4,0,10" HorizontalAlignment="Center">
                            <CheckBox x:Name="chk_MRA_Hidden" Content="Hidden?" Foreground="Gray" VerticalAlignment="Center" Margin="8,0,0,0"/>

                            <TextBlock Text="Effective From" VerticalAlignment="Center" Margin="26,0,4,0"/>
                            <DatePicker x:Name="dtp_MRA_EffectiveFrom"/>
                            <TextBlock Text="Effective To" VerticalAlignment="Center" Margin="18,0,4,0"/>
                            <DatePicker x:Name="dtp_MRA_EffectiveTo" />
                          </StackPanel>

                          <Button x:Name="btn_Save_Main_MRA_Header_Details" Content="Save NMRA Header Details" Height="30" Margin="90,6,90,14" Background="LightGreen" BorderBrush="DarkGreen"/>

                          <GroupBox Header="Low/Med/High score thresholds" Foreground="Gray" BorderBrush="#FF7E98EE" 
